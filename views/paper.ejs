<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="/images/favicon.ico" />
    <title>Digital Receipt - Paper Settings</title>

    <link rel="stylesheet" href="/css/paper.css" />

    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <main id="main" class="">
      <!-- Container for All Sections -->
      <div class="row">
        <!-- left hand side -->
        <div
          class="
            col-lg-2
            h-100
            d-flex
            flex-column
            align-items-center
            border
            left-hand
          "
        >
          <div class="arrow">
            <img src="/img/back.png" alt="" class="img-fluid" />
          </div>
          <div class="dashboard mb-5 mt-6">
            <img src="/img/dashboard.png" alt="" class="img-fluid" />
            <p class="mt-3">DashBoard</p>
          </div>

          <div class="dashboard my-5">
            <img src="/img/notification.png" alt="" class="img-fluid" />
            <p class="mt-3">Notification</p>
          </div>

          <div class="dashboard my-5">
            <img src="/img/history.png" alt="" class="img-fluid" />
            <p class="mt-3">History</p>
          </div>
          <div
            class="
              dashboard
              text-white
              my-5
              w-100
              settings
              text-center
              d-flex d-block
              align-self-center align-self-center
              justify-content-center
              py-1
            "
          >
            <img src="/img/settings.png" alt="" class="img-fluid" />
            <p class="mt-3">Settings</p>
          </div>

          <div class="dashboard mt-7 log-out">
            <img src="/img/logout.png" alt="" class="img-fluid" />
            <p class="mt-3">Logout</p>
          </div>
        </div>

        <!-- Right Side -->

        <div class="col-lg-10 h-100 top-right bg-light d-flex flex-column">
          <!-- Top Header -->
          <div
            class="
              top
              px-5
              py-3
              d-flex
              justify-content-between
              align-items-center
            "
          >
            <div class="search d-flex align-items-center">
              <img src="/img/search.png" alt="" class="img-fluid" />
              <input
                type="search"
                name=""
                class="form-control search-input"
                placeholder="Search here"
                id=""
              />
            </div>

            <div
              class="
                top-right
                d-flex
                justify-content-between
                align-items-center
              "
            >
              <p class="mt-3 ms-auto"><%- user.name %></p>
              <img
                src="/images/user-icon.png"
                alt=""
                class="ing-fluid katri ms-3"
              />
            </div>
          </div>
          <!-- End of Top Header -->

          <!-- heading -->
          <div class="heading px-5">
            <h2 class="h2 mt-5 text-dred">Paper Size Settings</h2>
            <p class="mt-3 fw-bold">
              Set the receipt output to what you choose
            </p>
          </div>

          <!-- End of heading -->

          <!-- Chechbox -->

          <div class="check-container">
            <div class="check">
              <div
                class="
                  d-flex
                  align-items-center
                  justify-content-start
                  form-control
                "
              >
                <div class="p-3 mr-5 form-check">
                  <input
                    class="form-check-input larger mt-0"
                    type="radio"
                    value="option1"
                    aria-label="Radio button for following text input"
                    id="radio1"
                    name="optradio"
                  />
                </div>

                <div class="head ml-4 d-flex justify-content-start flex-column">
                  <h4 class="h4 m-0">A4 Size</h4>
                  <p class="m-0">Normal Printer</p>
                </div>
              </div>
            </div>
            <!-- check 2 -->
            <div class="check">
              <div
                class="
                  d-flex
                  align-items-center
                  justify-content-start
                  form-control
                "
              >
                <div class="p-3 mr-5 form-check">
                  <input
                    class="form-check-input larger mt-0"
                    type="radio"
                    value="option2"
                    aria-label="Radio button for following text input"
                    id="radio2"
                    name="optradio"
                  />
                </div>

                <div class="head ml-4 d-flex justify-content-start flex-column">
                  <h4 class="h4 m-0">Letter Size</h4>
                  <p class="m-0">Normal Letter</p>
                </div>
              </div>
            </div>
            <!-- check 3 -->
            <div class="check">
              <div
                class="
                  d-flex
                  align-items-center
                  justify-content-start
                  form-control
                "
              >
                <div class="p-3 mr-5 form-check">
                  <input
                    class="form-check-input larger mt-0"
                    type="radio"
                    value="option3"
                    aria-label="Radio button for following text input"
                    id="radio3"
                    name="optradio"
                  />
                </div>

                <div class="head ml-4 d-flex justify-content-start flex-column">
                  <h4 class="h4 m-0">58mm</h4>
                  <p class="m-0">Bluetooth Default Printer(BETA) Printer</p>
                </div>
              </div>
            </div>
            <!-- check4 -->
            <div class="check">
              <div
                class="
                  d-flex
                  align-items-center
                  justify-content-start
                  form-control
                "
              >
                <div class="p-3 mr-5 form-check">
                  <input
                    class="form-check-input larger mt-0"
                    type="radio"
                    value="option4"
                    aria-label="Radio button for following text input"
                    id="radio4"
                    name="optradio"
                  />
                </div>

                <div class="head ml-4 d-flex justify-content-start flex-column">
                  <h4 class="h4 m-0">80mm</h4>
                  <p class="m-0">Bluetooth Default Printer(BETA)</p>
                </div>
              </div>
            </div>
            <!-- check5 -->
            <div class="check">
              <div
                class="
                  d-flex
                  align-items-center
                  justify-content-start
                  form-control
                "
              >
                <div class="p-3 mr-5 form-check">
                  <input
                    class="form-check-input larger mt-0"
                    type="radio"
                    value="option5"
                    aria-label="Radio button for following text input"
                    id="radio5"
                    name="optradio"
                  />
                </div>

                <div class="head ml-4 d-flex justify-content-start flex-column">
                  <h4 class="h4 m-0">Always Ask</h4>
                </div>
              </div>
            </div>
          </div>
          <!-- End of check -->

          <!-- Under btn Section -->
          <div
            class="
              bg-hash
              p-3
              d-flex
              align-items-center
              px-5
              warning
              justify-content-between
            "
          >
            <div class="down-left d-flex flex-column mr-5 flex-grow-1">
              <p class="text-red m-0">Warning!</p>
              <p class="text-muted m-0">
                These settings will continue
                <span class="d-block m-0"> until changed</span>
              </p>
            </div>
            <div class="buton flex-grow-1">
              <input type="button" class="btn btn-done w-50" value="Done" />
            </div>
          </div>
          <!-- Under btn Section -->

          
        </div>
        <!-- End of Hand Right Side -->
      </div>
      <!-- Container for All Sections -->
    </main>
  </body>
</html>
